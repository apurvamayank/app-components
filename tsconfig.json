{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "module": "es2015", // "es2015" makes Typescript compiler output compatible with Rollup
    "declaration": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "dist",
    "storybook-static",
    "src/stories/**/*"
  ],
  "include":["src/**/*"]
}
