{
  "name": "app-components-ts",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "lodash": "^4.17.19",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "styled-components": "^5.1.1",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "storybook": "start-storybook -p 9009 -s public",
    "test": "react-scripts test",
    "build-storybook": "build-storybook -c .storybook -o .out",
    "heroku-prebuild": "npm install",
    "heroku-postbuild": "npm run build-storybook",
    "start": "npx http-server .out",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.0.0-rc.3",
    "@storybook/addon-docs": "^6.0.0-rc.3",
    "@storybook/addon-links": "^6.0.0-rc.3",
    "@storybook/addons": "^6.0.0-rc.3",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.0.0-rc.3",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/lodash": "^4.14.159",
    "@types/node": "^12.12.50",
    "@types/react": "^16.9.42",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.1",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "prettier": "2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "tsc"
    }
  },
  "lint-staged": {
    "**/*.+(js|ts|tsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.{md}": [
      "prettier --write",
      "git add"
    ]
  }
}
